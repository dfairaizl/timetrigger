{
  "hosting": {
    "public": "hosting/dist",
    "predeploy": ["npm --prefix \"$PROJECT_DIR/hosting\" run build"],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
